<UserControl x:Class="_3_Semester_CSharpMath_WPF.Views.Pages.DichotomyMethodPage.UserControls.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3_Semester_CSharpMath_WPF.Views.Pages.DichotomyMethodPage.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" 
             xmlns:chartviewmodel="clr-namespace:_3_Semester_CSharpMath_WPF.ViewModels.Pages.DichotomyMethodPage.UserControls" 
             d:DataContext="{d:DesignInstance Type=chartviewmodel:ChartViewModel}">
    <Grid>
        <lvc:CartesianChart Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="100"
            Margin="20"
            Series="{Binding Series}"
            XAxes="{Binding XAxes}"
            YAxes="{Binding YAxes}"
            DrawMarginFrame="{Binding Frame}"
            ZoomMode="Both"
            TooltipPosition="Hidden" />
    </Grid>
</UserControl>
