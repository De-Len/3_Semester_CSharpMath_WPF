<Window x:Class="_3_Semester_CSharpMath_WPF.Views.Pages.LeastSquareMethodPage.Windows.LeastSquareMethodDataGeneratorWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3_Semester_CSharpMath_WPF.Views.Pages.LeastSquareMethodPage.Windows"
        mc:Ignorable="d"
        Title="Генератор данных"  Height="300" Width="700"
        WindowStartupLocation="CenterScreen"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:viewmodel="clr-namespace:_3_Semester_CSharpMath_WPF.ViewModels.Pages.LeastSquareMethodPage.Windows" 
        d:DataContext="{d:DesignInstance Type=viewmodel:LeastSquareMethodDataGeneratorWindowViewModel}"
        Icon="C:\Users\timof\Desktop\3_Semester_CSharpMath_WPF-Lab_8-LeastSquareMethod\3_Semester_CSharpMath_WPF\3_Semester_CSharpMath_WPF\Sources\Pica.png"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5 0 0" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="10" Margin="20">
            <DockPanel Margin="0 0 0 10">
                <TextBlock Grid.Row="1" Text="Количество чисел: " Style="{StaticResource TextBlockStyle}"/>
                <TextBox Margin="5 0 0 0" Padding="1" Text="{Binding NumbersCount}" MinWidth="50" HorizontalAlignment="Left"/>
            </DockPanel>
            <StackPanel>
                <WrapPanel>
                    <TextBlock Grid.Row="2" Text="Диапазон вектора X:" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" MinWidth="30" Padding="1" Margin="10 0 0 0"
                 Text="{Binding StartLimitX}"/>
                    <TextBlock Text="-" Style="{StaticResource TextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" MinWidth="30" Padding="1"
                 Text="{Binding EndLimitX}"/>
                </WrapPanel>
                <WrapPanel Margin="0 5 0 10">
                    <TextBlock Grid.Row="2" Text="Диапазон вектора Y:" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" MinWidth="30" Padding="1" Margin="10 0 0 0"
                        Text="{Binding StartLimitY}"/>
                    <TextBlock Text="-" Style="{StaticResource TextBlockStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" MinWidth="30" Padding="1"
                        Text="{Binding EndLimitY}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Grid.Row="4" Text="Точность генерируемых чисел вектора X (сколько знаков после запятой):" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox MinWidth="25" Margin="10 0 0 0" Padding="1"
                          Text="{Binding AccuracyCountDigitsAfterPointX}"/>
                </WrapPanel>
                <WrapPanel Margin="0 5 0 0">
                    <TextBlock Grid.Row="4" Text="Точность генерируемых чисел вектора Y (сколько знаков после запятой):" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox MinWidth="25" Margin="10 0 0 0" Padding="1"
          Text="{Binding AccuracyCountDigitsAfterPointY}"/>
                </WrapPanel>
                <WrapPanel Margin="0 20 0 0">
                    <Button Margin="0 10 0 10" Command="{Binding GenerateNumbersCommand}">
                        <WrapPanel>
                            <ui:SymbolIcon
                                  Grid.Row="0"
                                  FontSize="20"
                                  Symbol="Save16" />
                            <TextBlock Padding="10 0 0 0" Text="Сгенерировать" VerticalAlignment="Center" />
                        </WrapPanel>
                    </Button>
                    <ProgressBar IsIndeterminate="False" Margin="45 0 0 0" Minimum="0" Maximum="100" Value="{Binding ProgressBarValue}" Width="200"/>
                </WrapPanel>


            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
