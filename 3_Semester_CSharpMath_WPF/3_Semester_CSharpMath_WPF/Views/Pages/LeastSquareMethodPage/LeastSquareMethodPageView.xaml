<Page x:Class="_3_Semester_CSharpMath_WPF.Views.Pages.LeastSquareMethodPage.LeastSquareMethodPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_3_Semester_CSharpMath_WPF.Views.Pages.LeastSquareMethodPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LeastSquareMethodPageView"       xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      xmlns:viewmodel="clr-namespace:_3_Semester_CSharpMath_WPF.ViewModels.Pages.LeastSquareMethodPage" 
      d:DataContext="{d:DesignInstance Type=viewmodel:LeastSquareMethodPageViewModel}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100">
            <TextBlock Margin="20 0 0 0" FontSize="30" Text="Метод наименьших квадратов" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                
                <Button Margin="20 10 0 10" Command="{Binding GetDataFromExcelCommand}">
                    <WrapPanel>
                        <ui:SymbolIcon
                         Grid.Row="0"
                         FontSize="20"
                         Symbol="Folder20" />
                        <TextBlock Padding="10 0 0 0" Text="Из Excel файла" VerticalAlignment="Center" />
                    </WrapPanel>
                </Button>
                
                <Button Margin="20 10 0 10" Command="{Binding OpenDataGeneratorWindowCommand}">
                    <WrapPanel>
                        <ui:SymbolIcon
                             Grid.Row="0"
                             FontSize="20"
                             Symbol="ClipboardDataBar20" />
                        <TextBlock Padding="10 0 0 0" Text="Генератор данных" VerticalAlignment="Center" />
                    </WrapPanel>
                </Button>

            </StackPanel>
        </StackPanel>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="100"
        Padding="16" Margin="20"
        Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="8,8,8,8">

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Система уравнений:"/>
                <WrapPanel  Margin="0 10 0 0">
                    <Button Content="+" Command="{Binding AddToTableCommand}" Width="40" Height="34" Margin="0 0 1 0"/>
                    <Button Content="-" Command="{Binding RemoveFromTableCommand}" Width="40" Height="34"/>

                    <Button Margin="20 10 0 10" Command="{Binding ClearTableCommand}">
                        <WrapPanel>
                            <ui:SymbolIcon
                                 Grid.Row="0"
                                 FontSize="20"
                                 Symbol="Delete24" />
                            <TextBlock Padding="10 0 0 0" Text="Очистить" VerticalAlignment="Center" />
                        </WrapPanel>
                    </Button>
                </WrapPanel>
                <WrapPanel>
                    <Grid>
                        <DataGrid x:Name="dataGrid" ItemsSource="{Binding DataView}" AutoGenerateColumns="True" CanUserAddRows="False" RowHeight="20" ColumnWidth="40" RowHeaderWidth="0" HeadersVisibility="None"/>
                    </Grid>
                </WrapPanel>

                <StackPanel Orientation="Horizontal" >
                    <Button Margin="0 10 0 10" Command="{Binding SolveCommand}">
                        <WrapPanel>
                            <ui:SymbolIcon
                                 Grid.Row="0"
                                 FontSize="20"
                                 Symbol="ChevronDoubleUp20" />
                            <TextBlock Padding="10 0 0 0" Text="Порешать" VerticalAlignment="Center" />
                        </WrapPanel>
                    </Button>
                    
                    <StackPanel Orientation="Vertical" Margin="30 15 20 10" >
                        <WrapPanel >
                            <TextBlock Text="Знаков после запятой для коэффициентов" VerticalAlignment="Center" Margin="0 0 10 0"/>
                            <TextBox   MinWidth="30" Padding="1" Text="{Binding AnswerCountDigitsAfterPoint}"/>
                        </WrapPanel>
                        <WrapPanel Margin="0 7 0 0">
                            <TextBlock Text="Диапазон отрисовки графика:"  Margin="0 0 10 0" VerticalAlignment="Center"/>
                            <TextBox  MinWidth="30" Padding="1"  Text="{Binding StartLimit}"/>
                            <TextBlock Text="-" VerticalAlignment="Center"/>
                            <TextBox  MinWidth="30" Padding="1"  Text="{Binding EndLimit}"/>

                        </WrapPanel>
                    </StackPanel>

                    <StackPanel Margin="20 10 20 10" >
                        <CheckBox
                            Content="Линейная функция"
                            IsChecked="{Binding IsLinearRegression}"
                            IsEnabled="True" />

                        <CheckBox
                            Content="Квадратичная функция"
                            IsChecked="{Binding IsQuadraticRegression}"
                            IsEnabled="True"/>

                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>
        <StackPanel Orientation="Vertical" Grid.Row="6" Grid.Column="1">
            <WrapPanel>
                <TextBlock Text="Линейная функция: " Visibility="{Binding LinearRegressionVisibility}" />
                <TextBlock Text="{Binding LinearRegressionFunction}" Visibility="{Binding LinearRegressionVisibility}" />
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="Квадратичная функция: " Visibility="{Binding QuadraticRegressionVisibility}" />
                <TextBlock Text="{Binding QuadraticRegressionFunction}" Visibility="{Binding QuadraticRegressionVisibility}" />
            </WrapPanel>
        </StackPanel>
        <ContentControl Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="100"
                Content="{Binding ChartView}" 
                HorizontalAlignment="Stretch"  
                VerticalAlignment="Stretch" />
    </Grid>
</Page>

